{
  "required_api_version": "^2.0.0",
  "name": "Music Player Daemon extension",
  "description": "Control mpd via ulauncher",
  "developer_name": "Felix",
  "icon": "images/app.svg",
  "options": {
    "query_debounce": 0.1
  },
  "preferences": [
    {
      "id": "mpd_uex_keyword",
      "type": "keyword",
      "name": "mpd",
      "description": "Control mpd",
      "default_value": "mpd"
    },
    {
      "id": "mpd_music_dir",
      "type": "input",
      "name": "music directory",
      "default_value" : "$XDG_MUSIC_DIR",
      "description": "location of your music library"
    },
    {
      "id": "mpd_hostname",
      "type": "input",
      "name": "hostname",
      "default_value" : "localhost",
      "description": "hostname of your mpd server"
    },
    {
      "id": "mpd_port",
      "type": "input",
      "name": "port",
      "default_value" : "6600",
      "description": "port of your mpd server"
    },
    {
      "id" : "volume_default_dif",
      "type": "input",
      "name": "volume step",
      "default_value": "10",
      "description" : "default step when increasing/decreasing the volume"
    }
  ]
}
